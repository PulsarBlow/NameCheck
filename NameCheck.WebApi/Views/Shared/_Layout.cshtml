<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NameCheck</title>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/paper/bootstrap.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/main.min.css" rel="stylesheet">
    @if (IsSectionDefined("styles"))
    {
        @RenderSection("styles", false)
    }
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/logo.png" alt="NameCheck logo" id="site_logo" />
                @Html.ActionLink("NameCheck", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Try it now", "Index", "NameCheck")</li>
                    @if (@User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Batch mode", "Batch", "NameCheck")</li>
                        <li>@Html.ActionLink("Monitoring", "Index", "Monitoring")</li>
                    }
                </ul>

                @if (@User.Identity.IsAuthenticated)
                {
                    <p class="navbar-text navbar-right">Signed in as @User.Identity.Name <a href="~/account/signout" class="navbar-link">Sign out <i class="fa fa-sign-out"></i></a></p>
                }
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year <a href="https://github.com/PulsarBlow">PulsarBlow</a> - <a href="https://github.com/PulsarBlow/NameCheck">GitHub Project</a> - <a href="https://github.com/NameCheck/issues">Issues</a> <span class="light">- v@(ViewBag.Version)</span></p>
        </footer>
    </div>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-41236726-6', 'auto');
        ga('send', 'pageview');

    </script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/additional-methods.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/localization/messages_fr.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/app.js"></script>
</body>
</html>